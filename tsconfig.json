{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@util/*": ["util/*"],
      "@command/*": ["command/*"],
      "@event/*": ["event/*"],
      "@valid/*": ["validation/*"],
      "@config/*": ["config/*"],
      "@type/*": ["types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
